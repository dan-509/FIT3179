{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 550,
  "autosize": {"contains": "padding"},
  "title": "Intra-Continental vs. Extra-Continental Trade",
  "data": {
    "url": "https://raw.githubusercontent.com/dan-509/FIT3179/master/continents_bar_chart.csv"
  },
  "params": [
    {
      "name": "Year",
      "value":1995,
      "bind": {
        "input": "range", "min": 1995, "max": 2019, "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {"filter": "Year == null || datum.Year == Year"}
  ],
  "encoding": {
    "x": {"aggregate": "sum",
      "field": "World", "axis": {"grid": false,
      "ticks": false, "zindex": 1}, "stack":  "normalize", "title": null},
    "y": {
      "field": "Continent",
      "type": "nominal", "title": null, "axis": {"grid": false, "domainWidth": 1.5, "domainColor": "black", "ticks": false, "zindex": 1}}
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
       
        "color": {
          "field": "Intra-Group",
          "type": "nominal","title": "Trade Type", "scale": {"domain": ["Intra", "Extra"], "range": ["gold","#37bdbd"]}
        },
    
        "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"field": "World", "type": "quantitative", "format": ".2f", "title": "Trade (USD)"}
        ]
      }
    }
  ]
}
