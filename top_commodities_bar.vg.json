{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "data": {"url": "https://raw.githubusercontent.com/dan-509/FIT3179/master/Traded_commodities.csv"},
  "config": {"view": {"stroke": "transparent"}},
  "encoding": {
    "y": {
      "field": "Item",
      "type": "nominal",
      "sort": {"op": "sum", "field": "people"},
      "axis": null},
      "tooltip": {"field": "%_of_trade", "type": "quantitative", "title": "Percentage of Total Trade"}
  },
  "layer": [{
    "mark": {"type": "bar", "color": "#ffa10a"},
    "encoding": {
      "x": {
        "field": "%_of_trade",
        "type": "quantitative",
        "title": "% of Total Trade",
        "axis":{"grid": false, "domainOpacity": 0}
      }
    }
  }, {
    "mark": {"type": "text", "align": "left", "x": 5},
    "encoding": {
      "text": {"field": "Item"},
      "detail": {"aggregate": "count"}
    }
  }]
}
