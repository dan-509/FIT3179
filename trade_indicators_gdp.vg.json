{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 550,
  "title": "Trade Indicators vs. GDP per Capita",
  "data": {
    "url": "https://raw.githubusercontent.com/dan-509/FIT3179/master/gdp_trade_imports_exports.csv"
  },
  "params": [
    {
      "name": "Indicator",
      "value":"exports_per_capita",
      "bind": {
        "input": "select",
        "options": [
          "exports_per_capita",
          "imports_per_capita",
          "trade_openness"],
        "labels": [
          "Exports per Capita",
          "Imports per Capita",
          "Trade Openness"
        ],
        "name": "Indicator: "
      }
    }
  ],
  "transform": [

    {
      "filter": "Indicator == datum.exports_per_capita || datum.Indicator == Indicator"
    }
  ],
  "encoding": {
    "x": {
      "field": "Value",
      "type": "quantitative",
      "title": "Indicator", "scale": {"type": "log"}},
    "y": {
      "field": "gdp_per_capita",
      "type": "quantitative", "title": "GDP per Capita", "scale": {"type": "log"}}
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "Latin America & Caribbean",
              "Middle East & North Africa",
              "Europe",
              " Africa",
              "Asia",
              "Pacific"
            ],
            "range": [
              "#e41a1c",
              "#25b5c2",
              "#ff7f00",
              "#1a2dba",
              "#b8b52e",
              "#a65628",
              "purple"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.8},
          "value": 0.1
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "gdp_per_capita", "type": "quantitative", "format": ".2f", "title": "GDP per Capita (USD)"},
          {"field": "Value", "type": "quantitative", "format": ".2f", "title": "Indicator"}
        ]
      }
    },
     {
      "mark": {
        "type": "line",
        "color": "black",
        "width": 5,
        "opacity": 0.4
      },
      
      "transform": [
        {
          "loess": "gdp_per_capita",
          "on": "Value"
        }
      ],
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"grid": false, "ticks": false}
        },
        "y": {
          "field": "gdp_per_capita",
          "type": "quantitative",
          "axis": {"grid": false, "ticks": false}
        }
      }
    },
    {
 "mark": {
 "type": "text",
 "align": "right",
 "baseline": "line-top",
 "dx": -0,
 "fontSize": 11.5,
 "fontStyle": "helvetica"
 },
 "encoding": {
 "text": {"field": "Country", "type": "nominal"},
 "color": {"value": "black"},
 "opacity": {
 "condition": {
 "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand'|| datum['Country'] == 'United States'",
 "value": 1
 },
 "value": 0
 }
 
    }}
]}
